<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="24dp"
    style="@style/Madres"
    android:id="@+id/transaccion">

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/ofertar"
        android:background="@mipmap/publicar"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/regresar"
        android:layout_alignStart="@+id/comprar" />

    <Button
        android:layout_width="200dp"
        android:layout_height="63dp"
        android:id="@+id/comprar"
        android:background="@mipmap/adquirir"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/ofertar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/regresar"
        android:background="@mipmap/cerrar"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ofertar" />

</RelativeLayout>
