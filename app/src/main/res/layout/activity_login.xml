<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tdc.trabajandodesdecasa.login"
    android:background="@mipmap/background"
    android:id="@+id/layoutlogin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/text"
        android:textIsSelectable="false"
        android:gravity="center"
        android:textSize="@dimen/size_content"
        android:layout_marginTop="37dp"
        android:text="@string/suggestlogin"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Login"
        android:background="@drawable/editext"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Login"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Contrase単a"
        android:background="@drawable/editext"
        android:hint="Contrase単a"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/Login"
        android:layout_alignStart="@+id/Login"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        style="@style/Encabezado"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/relativeLayout4"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout3"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="185dp" />

        <Button
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingresar2"
        android:id="@+id/loginbutton"
        android:textSize="20dp"
        android:longClickable="true"
        android:textColor="#FFFFFF"
        android:nestedScrollingEnabled="true"
        android:onClick="setListFooter"
        android:background="@drawable/btnpr"
        android:layout_below="@+id/Contrase単a"
        android:layout_alignEnd="@+id/Contrase単a"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/linea"
        android:layout_below="@+id/loginbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:textIsSelectable="false"
        android:gravity="center"
        android:textSize="@dimen/size_content"
        android:text="si no tiene cuenta:"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        style="@drawable/btn_border_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registro"
        android:id="@+id/registButtom"
        android:textSize="20dp"
        android:longClickable="true"
        android:textColor="#FFFFFF"
        android:nestedScrollingEnabled="true"
        android:onClick="setListFooter"
        android:background="@drawable/btnpr"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/loginbutton"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_above="@+id/imageView"
        android:layout_toStartOf="@+id/loginbutton"
        android:background="@drawable/btnpl" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:background="@drawable/btnpl"
        android:layout_alignTop="@+id/registButtom"
        android:layout_toStartOf="@+id/registButtom" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:background="@mipmap/checki" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button6"
        android:background="@mipmap/regist"
        android:layout_alignBottom="@+id/registButtom"
        android:layout_toStartOf="@+id/registButtom" />

</RelativeLayout>
